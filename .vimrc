syntax on
set nocompatible

set ts=4
set sw=4
set sts=4

set ai

set et

colorscheme leo
set nu

set t_RV=
"set t_CO=256

set hls

set ls=2

" highlight 80th column
set cc=80

filetype on
filetype indent on
filetype plugin on


let python_highlight_string_formatting = 1
let python_highlight_builtins = 1
let python_highlight_exceptions = 1
let python_highlight_doctests = 1
